root = true

[*]
indent_size = 4
indent_style = space
charset = utf-8
; end_of_line = lf TODO PRSD-980 uncomment this line when making all line endings lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.{kt,kts}]
trim_trailing_whitespace = false

[*.html]
insert_final_newline = false

[*.{scss,json,yml}]
indent_size = 2
